# vpn demo inventory using linode and linode-list-instances.py

[alma]
{% for index in alma -%}
{{ index.name }} ansible_host={{ index.public_ip }} # {{ index.dns }} {{ index.id }}
{% endfor %}

[centos]
{% for index in centos -%}
{{ index.name }} ansible_host={{ index.public_ip }} # {{ index.dns }} {{ index.id }}
{% endfor %}

[debian]
{% for index in debian -%}
{{ index.name }} ansible_host={{ index.public_ip }} # {{ index.dns }} {{ index.id }}
{% endfor %}

[ubuntu]
{% for index in ubuntu -%}
{{ index.name }} ansible_host={{ index.public_ip }} # {{ index.dns }} {{ index.id }}
{% endfor %}

[unk]
{% for index in unk -%}
{{ index.name }} ansible_host={{ index.public_ip }} # {{ index.dns }} {{ index.id }}
{% endfor %}

[alma:vars]
ansible_ssh_user=root
ansible_ssh_private_key_file=./id_rsa
ansible_python_interpreter=/usr/libexec/platform-python

[centos:vars]
ansible_ssh_user=root
ansible_ssh_private_key_file=./id_rsa
ansible_python_interpreter=/usr/libexec/platform-python

[debian:vars]
ansible_ssh_user=root
ansible_ssh_private_key_file=./id_rsa
ansible_python_interpreter=/usr/bin/python3

[ubuntu:vars]
ansible_ssh_user=root
ansible_ssh_private_key_file=./id_rsa
ansible_python_interpreter=/usr/bin/python3
